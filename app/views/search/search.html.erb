<div class="container">
	<div class="row">
		<div class=col-xs-3>
			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>
			<!--メモ 右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class=col-xs-9>
		<h2><%= @word %>の検索結果</h2>
		<% if @users.present? %>
			<%= render 'users/users_table', users: @users %>
		<!--books一覧 -->
		<% elsif @books.present? %>
			<%= render 'books/books_table', books: @books %>
			<!--books一覧 -->
		<% end %>
		</div>
	</div>
</div>