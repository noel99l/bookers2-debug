<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name%></td>
			<td>フォロー：<%= user.followings.count %></td>
			<td>フォロワー：<%= user.followers.count %></td>
			<td><%= render 'relationships/follow_button', user: user %></td>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= will_paginate users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>